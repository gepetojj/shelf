model User {
    id              String   @id @default(uuid())
    externalId      String   @unique
    email           String
    username        String
    firstName       String?
    lastName        String?
    profileImageUrl String?
    banned          Boolean  @default(false)
    createdAt       DateTime @default(now())
    updatedAt       DateTime @updatedAt

    annotations Annotation[]
    comments    Comment[]
    files       File[]
    posts       Post[]
    Progress    Progress[]
    Report      Report[]
    Endurance   Endurance?
}
