model Post {
    id             String   @id @default(uuid())
    workIdentifier String?  @unique
    title          String
    subtitle       String?
    description    String
    authors        String[]
    publishers     String[]
    pages          Int
    largeThumbnail String?
    smallThumbnail String?
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt

    annotations Annotation[]
    comments    Comment[]
    files       File[]
    uploader    User                 @relation(fields: [uploaderId], references: [id], onDelete: SetDefault, onUpdate: NoAction)
    uploaderId  String               @default("deleted")
    tags        TagsOnPosts[]
    collections CollectionsOnPosts[]

    @@index([createdAt(sort: Desc)])
    @@index([workIdentifier, title])
}
